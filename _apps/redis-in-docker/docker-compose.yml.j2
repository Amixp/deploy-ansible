{{ srv_name }}:
  image: "{{ docker_image }}"
  user: "{{ deploy_user.stat.uid }}:{{ deploy_user.stat.gid }}"
  ports:
    - "6379"
  environment:
    SERVICE_TAGS: "{{ run_env }}"
    SERVICE_NAME: "{{ srv_name }}"
  volumes:
    - "{{ deploy_user.stat.path }}/data:/var/redis"
    - "{{ deploy_user.stat.path }}/config:/opt/redis/config"
