ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
ssl_ciphers ALL:!ADH:!EXP:!LOW:!RC2:!3DES:!SEED:!MD5:!aNULL:!eNULL:!NULL:!DH:!EDH:!AESGCM:!RC4:+HIGH:+MEDIUM;
ssl_prefer_server_ciphers on;

ssl_session_cache shared:SSL:10m;
ssl_session_timeout 10m;

server {
    listen 443 ssl;

    ssl on;
    ssl_certificate /etc/ssl/certs/{{ app_name }}.crt;
    ssl_certificate_key /etc/ssl/private/{{ app_name }}.key;

    access_log /var/log/nginx/{{ app_name }}-ssl-access.log;
    error_log  /var/log/nginx/{{ app_name }}-ssl-error.log;

    # client_header_buffer_size 128k;
    # client_max_body_size      8m;

    location = /favicon.ico {
        log_not_found off;
        access_log    off;
    }

    location = /robots.txt {
        allow         all;
        log_not_found off;
        access_log    off;
    }

    location / {
        root   /usr/share/nginx/html2;
        index  index.html index.htm;
    }

